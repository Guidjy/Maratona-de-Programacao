{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build all files in folder",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.cpp",
                "test.cpp",
                "-o", "program.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiles all .cpp files in current folder into program.exe"
        }
    ],
    "version": "2.0.0"
}
